{   "kind":"ReplicationController",   "apiVersion":"v1",   "metadata":{      "name":"redis-cluster-controller",      "labels":{         "redis":"worker"      }   },   "spec":{      "replicas":2,      "template":{         "metadata":{            "labels":{               "redis":"worker"            }         },         "spec":{            "containers":[               {                  "name":"redis-worker",                  "image":"kubernetes/redis-slave:v2",                  "ports":[                     {                        "containerPort":6379,                        "protocol":"TCP"                     }                  ]               }            ]         }      }   }}